// *****************************************************************************
//  procedure NMRAnetStateMachine_InitializeNodeBuffer
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
procedure NMRAnetStateMachine_InitializeNodeBuffer(NodeBuffer: PNMRAnetNodeBuffer; NodeIDHi, NodeIDLo: DWord);
begin
  NodeBuffer^.DatagramReceive := PDatagramBuffer(nil);
  NodeBuffer^.DatagramTransmit := PDatagramBuffer(nil);
  NodeBuffer^.ACDI_TransmitBuffer := PACDI_TransmitBuffer(nil);
  NodeBuffer^.ACDI_ReceiveBuffer := PACDI_ReceiveBuffer(nil);
  FlushResponses(NodeBuffer);
  NodeBuffer^.State := 0;
  NodeBuffer^.iState := STATE_NMRABUS_START;
  NodeBuffer^.Responses.BufferOverrunCount := 0;
  NodeBuffer^.Node.ID[0] := NodeIDLo;
  NodeBuffer^.Node.ID[1] := NodeIDHi;
  NodeBuffer^.Node.Seed[0] := NodeIDLo;
  NodeBuffer^.Node.Seed[1] := NodeIDHi;
end;

// *****************************************************************************
//  procedure NMRAnetStateMachine_Initialize
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
procedure NMRAnetStateMachine_Initialize;
begin
  NMRAnetCANReceive_Initialize;
  NMRAnetDatagrams_Initialize;
  NMRAnetConfigurationProtocol_Initialize;
  NMRAnetAbbreviatedConfigurationProtocol_Initialize;
  SimpleResponseCallbackFunc := PSimpleResponseCallbackFunc( nil);
  ComplexResponseCallbackFunc := PComplexResponseCallbackFunc( nil);
  NMRAnetStateMachine_InitializeList(@TX_CANBufferList, @TX_CANBuffer, TX_CAN_BUFFER_LEN);
  NMRAnetStateMachine_InitializeList(@TX_NMRAnetBufferList, @TX_NMRAnet_Buffer, TX_NMRANET_BUFFER_LEN);
end;

// *****************************************************************************
//  procedure NMRAnetStateMachine_1ms_Timer;
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
procedure NMRAnetStateMachine_1ms_Timer(NodeBuffer: PNMRAnetNodeBuffer);
begin
  Inc(NodeBuffer^.LoginTimeCount);
  NMRAnetDatagrams_1ms_TimeTick(Nodebuffer);
  NMRAnetAbbreviatedConfigurationProtocol_1ms_TimeTick(NodeBuffer);
end;

// *****************************************************************************
//  function TestReceivedMsgFlags
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
function TestReceivedMsgFlags(NodeBuffer: PNMRAnetNodeBuffer; Flag: Word): Boolean;
begin
  Result := NodeBuffer^.Responses.SimpleResponseFlags and Flag <> 0
end;

// *****************************************************************************
//  function ClearReceivedMsgFlags
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
procedure ClearReceivedMsgFlags(NodeBuffer: PNMRAnetNodeBuffer; Flag: Word);
begin
  LockCANInterrupt;
  NodeBuffer^.Responses.SimpleResponseFlags := NodeBuffer^.Responses.SimpleResponseFlags and not Flag;
  UnLockCANInterrupt;
end;

// *****************************************************************************
//  function DuplicateDetected
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
function DuplicateDetected(NodeBuffer: PNMRAnetNodeBuffer; Flag: Word; NextState: Byte): Boolean;
begin
  Result := False;
  if TestReceivedMsgFlags(NodeBuffer, Flag) then
  begin
    ClearReceivedMsgFlags(NodeBuffer, Flag);
    NodeBuffer^.iState := NextState;
    Result := True
  end
end;


// *****************************************************************************
//  procedure TryTransmitCANLayerMsg
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
function TryTransmitCANLayerMsg(NodeBuffer: PNMRAnetNodeBuffer; Buffer: PCANBuffer; VariableField: DWord; ): Boolean;
begin
  Result := False;
  if not CANStorage_ListFull(@TX_CANBufferList) then
  begin
    NMRAnetUtilities_CreateCANControlFramePacket(NodeBuffer, Buffer, VariableField);
    if CANStorage_AddToList(@TX_CANBufferList, Buffer) then
    begin
      StartCANMessageEngine();
      Result := True
    end
  end ;
end;

// *****************************************************************************
//  procedure TryTransmitNMRABusLayerMsg
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
function TryTransmitNMRABusLayerMsg(NodeBuffer: PNMRAnetNodeBuffer; Buffer: PCANBuffer; VariableField: DWord; DestinationAlias: Word; DataCount: Byte; DataBytes: PCAN_DataBytes): Boolean;
begin
  Result := False;
  if not CANStorage_ListFull(@TX_NMRAnetBufferList) then
  begin
    NMRAnetUtilities_CreateNMRABusMessagePacket(NodeBuffer, Buffer, VariableField, DestinationAlias, DataCount, DataBytes);
    if CANStorage_AddToList(@TX_NMRAnetBufferList, Buffer) then
    begin
      StartCANMessageEngine();
      Result := True;
    end
  end
end;

// *****************************************************************************
//  function NextComplexResponse
//     Parameters:
//     Returns:
//
//     Description:
//
// *****************************************************************************
function FindStoredComplexResponse(NodeBuffer: PNMRAnetNodeBuffer; nCode: Word): PQueuedResponse;
var
  i: Word;
begin
  i := 0;
  Result := nil;
  while i < LEN_QUEUED_RESPONSE_LIST do
  begin
    if NodeBuffer^.Responses.List[i].nCode = nCode then
    begin
      Result := @NodeBuffer^.Responses.List[i];
      Exit
    end;
    Inc(i);
  end;
end;

