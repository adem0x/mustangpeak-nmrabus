// *****************************************************************************
//  procedure NMRAnetDatagrams_Initialize;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure NMRAnetDatagrams_Initialize;
var
  i, j: Integer;
begin
  for i := 0 to LEN_DATAGRAM_ARRAY - 1 do
  begin
    DatagramInfo.List[i].iState := DATAGRAM_EMPTY;
    DatagramInfo.List[i].iState := 0;
    for j := 0 to LEN_DATAGRAM-1 do
      DatagramInfo.List[i].DataBytes[j] := 0;
  end;
  DatagramInfo.iState := STATE_DATAGRAM_START;
  DatagramInfo.iActiveDatagram := 0;
  for i := 0 to LEN_DATAGRAM_BUFFER_OVERFLOW_LIST-1 do
    DatagramInfo.BufferOverflowList[i] := 0;
end;

// *****************************************************************************
//
// procedure NMRAnetDatagrams_ExtractNext;
//
//  Parameters:
//                None
//  Returns:
//                None
//  Description:
//              Pulls the first found Ready Datagram in the Datagram Array
//
// *****************************************************************************
function NMRAnetDatagrams_ExtractNext(var Datagram: TDatagram): Boolean;
var
  i: Integer;
begin
  Result := False;
  i := 0;
  while (i < LEN_DATAGRAM_ARRAY) and not Result do
  begin
    if DatagramInfo.List[i].iState = DATAGRAM_READY then
    begin
      Datagram := DatagramInfo.List[i].DataBytes;
      DatagramInfo.List[i].iState := DATAGRAM_EMPTY;
      Result := True;
    end;
    Inc(i);
  end
end;

// *****************************************************************************
//
// procedure NMRAnetDatagrams_1ms_TimeTick;
//
//  Parameters:
//                None
//  Returns:
//                None
//  Description:
//              Updates internal flags to track for various timeout conditions mainly for the bus.
//
//              WARNING: Application must make sure that the Datagram Array is not
//              modified in an interrupt when calling this function...... Disable the CAN for
//              the time this takes to run.
//
// *****************************************************************************
procedure NMRAnetDatagrams_1ms_TimeTick;
var
  i: Integer;
begin
  for i := 0 to LEN_DATAGRAM_ARRAY - 1 do
  begin
    if DatagramInfo.List[i].iState = DATAGRAM_RECEIVING then
    begin
      if DatagramInfo.List[i].iWatchdog < DATAGRAM_WATCHDOG_MAX then                 // Latch it at DATAGRAM_WATCHDOG_MAX
        Inc(DatagramInfo.List[i].iWatchdog)                                          // Increase the Watchdog counter
    end
  end;
end;

function TrySendDatagramResponse(Datagram: PDatagramBuffer; MTI: Byte; ErrorCode: PDatagramErrorCode; CodeByteCount: Byte; NextDatagramState: Byte): Boolean;
var
  Buffer: TCANBuffer;
begin
  Result := False;
  if not CANStorage_ListFull(@TX_NMRAnetBufferList) then
  begin
    NMRAnetUtilities_CreateNMRABusMessagePacket(MTI_ADDRESSED, Datagram^.SourceAlias, @Buffer);
    Buffer.DataBytes[0] := MTI;
    if ErrorCode <> PDatagramErrorCode( nil) then
    begin
      Buffer.DataBytes[1] := ErrorCode^[0];
      Buffer.DataBytes[2] := ErrorCode^[1];
    end;
    Buffer.DataCount := CodeByteCount;
    if CANStorage_AddToList(@TX_NMRAnetBufferList, @Buffer) then
    begin
      StartCANMessageEngine();      
      Datagram^.iState := NextDatagramState;                                    // Set the new state of the Datagram buffer
      Result := True
    end
  end
end;

// *****************************************************************************
//  procedure SendAnyBufferFullResponses;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure SendAnyBufferFullResponses(Datagram: PDatagramBuffer);
var
  i: Integer;
begin
  if not CANStorage_ListFull(@TX_NMRAnetBufferList) then
  begin
    i := 0;
    while i < LEN_DATAGRAM_BUFFER_OVERFLOW_LIST do
    begin
      if DatagramInfo.BufferOverflowList[i] <> 0 then
      begin
        TrySendDatagramResponse(Datagram, MTI_DATAGRAM_REJECTED, @DATAGRAM_REJECTED_BUFFER_FULL, 3, DATAGRAM_EMPTY);
        Exit;
      end;
        Inc(i); 
    end;
  end
end;

