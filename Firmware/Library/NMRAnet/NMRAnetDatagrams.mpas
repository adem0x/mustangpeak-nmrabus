// *****************************************************************************
//  procedure NMRAnetDatagrams_Process;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure NMRAnetDatagrams_Process;
var
  ActiveDatagram: PDatagramBuffer;
  Buffer: TCANBuffer;
begin          

   Exit;


  ActiveDatagram := @DatagramInfo.List[DatagramInfo.iActiveDatagram];

  case DatagramInfo.iState of
    STATE_DATAGRAM_START :
      begin
        case ActiveDatagram^.iState of
          DATAGRAM_RECEIVING          : begin
                                          if ActiveDatagram^.iWatchdog >= DATAGRAM_WATCHDOG_MAX then
                                            DatagramInfo.iState := STATE_DATAGRAM_ABANDONED    // Too long between datagram frames, it is abandoned
                                          else
                                            DatagramInfo.iState := STATE_DATAGRAM_NEXT;
                                        end;
          DATAGRAM_TRANSFER_FULL      : DatagramInfo.iState := STATE_DATAGRAM_RESPOND          // The datagram has been fully received time to respond to hte sender
        else
          DatagramInfo.iState := STATE_DATAGRAM_NEXT;                           // Move to the next Datagram Buffer
        end;
      end;
    STATE_DATAGRAM_ABANDONED :
      begin
        if TrySendDatagramResponse(ActiveDatagram, MTI_DATAGRAM_REJECTED, @DATAGRAM_REJECTED_OUT_OF_ORDER, 2, DATAGRAM_EMPTY) then
          DatagramInfo.iState := STATE_DATAGRAM_NEXT;
      end;
    STATE_DATAGRAM_RESPOND  :
      begin
        case ActiveDatagram^.ErrorCode of
          DGE_NONE                 : if TrySendDatagramResponse(ActiveDatagram, MTI_DATAGRAM_RECIEVED_OK, nil, 1, DATAGRAM_READY) then
                                     begin
                                     
                                       // NOTE MAY 16, 2012 may not want to send response until after the datagram is handled, Memory Confguration is a good example
                                       
                                       case ActiveDatagram^.Databytes[0] of
                                         DATAGRAM_TYPE_LOG_REQUEST     : DispatchSpecialDatagramLogRequest(ActiveDatagram);                // ?? unknown
                                         DATAGRAM_TYPE_LOG_REPLY       : DispatchSpecialDatagramLogReply(ActiveDatagram);                  // ?? unknown
                                         DATAGRAM_TYPE_CONFIGURATION   : DispatchSpecialDatagramMemConfiguration(ActiveDatagram);          // Memory Configuration Protocol
                                         DATAGRAM_TYPE_REMOTE_BUTTON   : DispatchSpecialDatagramRemoteButton(ActiveDatagram);              // Remote Button Configuration
                                         DATAGRAM_TYPE_DISPLAY         : DispatchSpecialDatagramDisplay(ActiveDatagram);                   // Display Protocol
                                         DATAGRAM_TYPE_TRAIN_CONTROL   : DispatchSpecialDatagramTrainControl(ActiveDatagram);              // Train Control Protocol
                                       end;
                                       DatagramInfo.iState := STATE_DATAGRAM_NEXT;
                                     end;
          DGE_FRAME_OUT_OF_ORDER   : if TrySendDatagramResponse(ActiveDatagram, MTI_DATAGRAM_REJECTED, @DATAGRAM_REJECTED_OUT_OF_ORDER, 3, DATAGRAM_EMPTY) then
                                       DatagramInfo.iState := STATE_DATAGRAM_NEXT;
          DGE_BUFFER_FULL          : if TrySendDatagramResponse(ActiveDatagram, MTI_DATAGRAM_REJECTED, @DATAGRAM_REJECTED_BUFFER_FULL, 3, DATAGRAM_EMPTY) then
                                       DatagramInfo.iState := STATE_DATAGRAM_NEXT;
        end
      end;
    STATE_DATAGRAM_NEXT      :
      begin
        SendAnyBufferFullResponses(ActiveDatagram);
        
        Inc(DatagramInfo.iActiveDatagram);
        if DatagramInfo.iActiveDatagram >= LEN_DATAGRAM_ARRAY then 
          DatagramInfo.iActiveDatagram := 0;
        DatagramInfo.iState := STATE_DATAGRAM_START
      end
   else
     DatagramInfo.iState := STATE_DATAGRAM_START;
   end;
end;

// *****************************************************************************
//  function TryAllocateBuffer;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
function TryAllocateBuffer(var Datagram: PDatagramBuffer): Boolean;
var
  i: Integer;
begin
  Result := False;
  i := 0;
  while (i < LEN_DATAGRAM_ARRAY) and not Result do
  begin
    if DatagramInfo.List[i].iState = DATAGRAM_EMPTY then
    begin                                                                       // Grab the first empty buffer
      Datagram := @DatagramInfo.List[i];                                             // It is NOT initialized
      Datagram^.ErrorCode := 0;
      Result := True
    end;
    Inc(i);
  end
end;

// *****************************************************************************
//  function FindInProcessDatagram;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
function FindInProcessDatagram(SourceAlias: Word; var Datagram: PDatagramBuffer): Boolean;
var
  i: Integer;
begin
  Result := False;
  i := 0;
  while (i < LEN_DATAGRAM_ARRAY) and not Result do
  begin
    if DatagramInfo.List[i].iState = DATAGRAM_RECEIVING then
      if NMRAnetUtilities_CompareAliasIDs(DatagramInfo.List[i].SourceAlias, SourceAlias) then
      begin
        Datagram := @DatagramInfo.List[i];
        Result := True
      end;
    Inc(i)
  end
end;

// *****************************************************************************
//  procedure UpdateFrameCount;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
function UpdateFrameCount(Datagram: PDatagramBuffer): Boolean;
begin
  if Datagram^.ErrorCode = DGE_NONE then                                        // If in Error has already failed this function
  begin
    Inc(Datagram^.iFrameCount);                                                 // Next Frame
    Datagram^.iWatchdog := 0;                                                   // Reset the Watchdog since the source connected again
    if Datagram^.iFrameCount >= DATAGRAM_MAX_FRAME_COUNT then                   // Source sent too many frames
      Datagram^.ErrorCode := DGE_FRAME_OUT_OF_ORDER                             // Ready for a "Frame out of Order" Response
  end;
  Result := Datagram^.ErrorCode = DGE_NONE
end;

// *****************************************************************************
//  procedure StoreBytes;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure StoreBytes(Datagram: PDatagramBuffer; var Buffer: TCANBuffer; IsFull: Boolean);
var
  i: Integer;
begin
  for i := 0 to Buffer.DataCount - 1 do
  begin
    Datagram^.DataBytes[i + Datagram^.iByteCount] := Buffer.DataBytes[i];
    Inc(Datagram^.iByteCount);
  end;
  if IsFull then
    Datagram^.iState := DATAGRAM_TRANSFER_FULL;                                 // Ready for main statemachine Datagram_Process to handle it from here
end;

// *****************************************************************************
//  procedure AddToBufferOverflowList;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure AddToBufferOverflowList(Datagram: PDatagramBuffer);
var
  i: Integer;
begin
  i := 0;
  while i < LEN_DATAGRAM_BUFFER_OVERFLOW_LIST do
  begin
    if DatagramInfo.BufferOverflowList[i] = 0 then
    begin
      DatagramInfo.BufferOverflowList[i] := Datagram^.SourceAlias;
      Exit;
    end
  end;
end;

// *****************************************************************************
//  procedure NMRAnetDatagrams_ProcessReceive;
//
//  Parameters:
//
//  Result:
//
//  Description:
// *****************************************************************************
procedure NMRAnetDatagrams_ProcessReceive(Buffer: PCANBuffer);
var
  Datagram: PDatagramBuffer;
begin
//UART1_Write_Text('x'+LF);

  Datagram := PDatagramBuffer( nil);
  case Buffer^.ID and MTI_TYPE_MASK of
    MTI_DATAGRAM_ONLY_FRAME :
      begin
        if TryAllocateBuffer(Datagram) then
        begin
//UART1_Write_Text('A'+LF);
          Datagram^.SourceAlias := Buffer^.ID and MASK_SOURCE_ALIAS;
          Datagram^.iByteCount := 0;
          Datagram^.iFrameCount := 0;
          StoreBytes(Datagram, Buffer^, False);
          Datagram^.iState := DATAGRAM_TRANSFER_FULL;                           // Ready for a "Full" Response
        end
      end;
    MTI_DATAGRAM_FRAME_START :
      begin
        if TryAllocateBuffer(Datagram) then
        begin
//UART1_Write_Text('B'+LF);
          Datagram^.SourceAlias := Buffer^.ID and MASK_SOURCE_ALIAS;
          Datagram^.iByteCount := 0;
          Datagram^.iFrameCount := 0;
          Datagram^.iWatchdog := 0;
          StoreBytes(Datagram, Buffer^, False);
          Datagram^.iState := DATAGRAM_RECEIVING;
        end
      end;
    MTI_DATAGRAM_FRAME :
      begin
        if FindInProcessDatagram(Buffer^.ID and MASK_SOURCE_ALIAS, Datagram) then
        begin
          if UpdateFrameCount(Datagram) then
          begin
            StoreBytes(Datagram, Buffer^, False);
//UART1_Write_Text('C'+LF);
          end
        end
      end;
    MTI_DATAGRAM_FRAME_END :
      begin
        if FindInProcessDatagram(Buffer^.ID and MASK_SOURCE_ALIAS, Datagram) then
        begin
          if UpdateFrameCount(Datagram) then
          begin
            StoreBytes(Datagram, Buffer^, True);
//UART1_Write_Text('D'+LF);
          end
        end else
        begin
//UART1_Write_Text('E'+LF);
          AddToBufferOverflowList(Datagram);
        end
      end;
   end;
end;

